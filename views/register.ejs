<% include ./partials/header %>

<div class="row">
    <div class="col-md-12">
         <form class="form-signin" action="/register" method="POST">
            <h1 class="h3 mb-3 font-weight-normal">Please sign up</h1>
            <label for="inputUsername" class="sr-only">Username</label>
            <input type="text" id="inputUsername" class="form-control" name="username" placeholder="Username" required autofocus>
            <label for="inputPassword" class="sr-only">Password</label>
            <input type="password" id="inputPassword" class="form-control" name="password" placeholder="Password" required>
            <label for="inputEmail" class="sr-only">E-mail</label>
            <input id="inputEmail" class="form-control" type="email" name="email" placeholder="youremailhere@yelpcamp.com" required>
            <label for="inputAvatar" class="sr-only">Avatar</label>
            <input id="inputAvatar" class="form-control" type="text" name="avatar" placeholder="avatar url">
            <label for="inputAdminCode" class="sr-only">Admin Code</label>
            <input id="inputAdminCode" class="form-control" type="text" name="adminCode" placeholder="admin code">
            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
            <ul class="nobullet">
                <li><a href="/forgot">Forgot password?</a></li>
                <li><a href="/campgrounds">Go Back</a></li>
            </ul>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ./partials/footer%>