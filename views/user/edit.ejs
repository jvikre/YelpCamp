<% include ../partials/header %>

<div class="row">
    <h1 style="text-align: center">Edit <%= user.name %>'s Profile</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/users/<%= user._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="avatar">Avatar Image URL</label>
                <input class="form-control" type="text" name="user[avatar]" id="avatar" value="<%= user.avatar %>">
            </div>
            <div class="form-group">
            	<label for="firstName">First Name</label>
                <input class="form-control" type="text" name="user[firstName]" value="<%= user.firstName %>">
            </div>
            <div class="form-group">
            	<label for="lastName">Last Name</label>
                <input class="form-control" type="text" name="user[lastName]" value="<%= user.lastName %>">
            </div>
            <div class="form-group">
                <label for="email">E-mail</label>
                <input class="form-control" type="email" name="user[email]" value="<%= user.email %>">
            </div>
            <div class="form-group">
            	<label for="bio">About Yourself</label>
                <textarea rows="10" cols="50" class="form-control" name="user[bio]"><%= user.bio %></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>